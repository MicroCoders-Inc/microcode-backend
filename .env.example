# ========================================
# Backend Environment Variables
# ========================================

# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development

# ⚠️ SECURITY WARNING: Generate a strong, unique SECRET_KEY for production!
# NEVER commit your actual SECRET_KEY to version control!
# Generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=REPLACE_THIS_WITH_A_SECURE_RANDOM_KEY

# Database Configuration
# Development: sqlite:///main.db
# Production: postgresql://user:password@host:port/database
DATABASE_URL=sqlite:///main.db

# CORS Configuration
# Comma-separated list of allowed origins (no spaces!)
# Development: http://localhost:5173,http://127.0.0.1:5173
# Production: https://your-frontend-domain.com
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173